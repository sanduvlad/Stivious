<Window x:Class="Stivious.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stivious"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" WindowStyle="None"
        Mouse.MouseLeave="OnWindowInactive"
        Mouse.MouseEnter="OnWindowActive"
        >
    <Grid Background="#FF020810" Mouse.MouseDown="DragWindow">
        <Grid Name="MainPlayerGrid" >
            <ListBox ScrollViewer.HorizontalScrollBarVisibility="Hidden" x:Name="playListBox" Height="213" Margin="10,96,10,0" VerticalAlignment="Top" MouseDoubleClick="playListBox_MouseDoubleClick" Foreground="#FFB8B8B8">
                <ListBox.Background>
                    <ImageBrush ImageSource="resources/perixbcy.png"/>
                </ListBox.Background>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Ellipse Mouse.MouseDown="PlayPauseButton" Fill="#FF020810" Height="60" Width="60" Stroke="#FF45CEFE" Margin="231,31,234,259"/>

            <Ellipse Mouse.MouseDown="PreviousSong" Fill="#FF020810" HorizontalAlignment="Left" Height="30" Margin="180,46,0,0" Stroke="#FF45CEFE" VerticalAlignment="Top" Width="30"/>
            <Ellipse MouseDown="Switch_Shuffle" Fill="#FF020810" HorizontalAlignment="Left" Height="30" Margin="121,46,0,0" Stroke="#FF45CEFE" VerticalAlignment="Top" Width="30"/>
            <Ellipse Fill="#FF020810" HorizontalAlignment="Left" Height="30" Margin="57,46,0,0" Stroke="#FF45CEFE" VerticalAlignment="Top" Width="30"/>
            <Ellipse Mouse.MouseDown="NextSong" Fill="#FF020810" HorizontalAlignment="Left" Height="30" Margin="317,46,0,0" Stroke="#FF45CEFE" VerticalAlignment="Top" Width="30"/>
            <Ellipse MouseDown="Switch_Repeat" Fill="#FF020810" HorizontalAlignment="Left" Height="30" Margin="372,46,0,0" Stroke="#FF45CEFE" VerticalAlignment="Top" Width="30" />
            <Ellipse Fill="#FF020810" HorizontalAlignment="Left" Height="30" Margin="430,46,0,0" Stroke="#FF45CEFE" VerticalAlignment="Top" Width="30"/>
            <Rectangle Mouse.MouseDown="CloseAplication" HorizontalAlignment="Left" Height="20" Margin="498,9,0,0" Stroke="Black" VerticalAlignment="Top" Width="20" RadiusX="3.5" RadiusY="3.5" RenderTransformOrigin="0.5,0.5">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF8B350F"/>
                        <GradientStop Color="#FFF7E6B6" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>

            </Rectangle>
            <Rectangle Mouse.MouseDown="MinimizeApplication" HorizontalAlignment="Left" Height="20" Margin="471,9,0,0" Stroke="Black" VerticalAlignment="Top" Width="20" RadiusX="3.5" RadiusY="3.5">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0E3D7B" Offset="0"/>
                        <GradientStop Color="#FF9DE8F4" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>

            </Rectangle>
            <Rectangle Mouse.MouseDown="CloseAplication" HorizontalAlignment="Left" Height="16" Margin="506,11,0,0" Stroke="Black" VerticalAlignment="Top" Width="3" RenderTransformOrigin="0.5,0.5" StrokeThickness="0" Fill="#FF2B0402" RadiusX="1" RadiusY="1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="45
                                     "/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle Mouse.MouseDown="CloseAplication" HorizontalAlignment="Left" Height="16" Margin="506,11,0,0" Stroke="Black" VerticalAlignment="Top" Width="3" RenderTransformOrigin="0.5,0.5" StrokeThickness="0" Fill="#FF2B0402" RadiusX="1" RadiusY="1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-45"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle Mouse.MouseDown="MinimizeApplication" HorizontalAlignment="Left" Height="14" Margin="480,12,0,0" Stroke="Black" VerticalAlignment="Top" Width="2" RenderTransformOrigin="0.5,0.5" StrokeThickness="0" Fill="#FF071E41" RadiusX="1" RadiusY="1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-1.79"/>
                        <RotateTransform Angle="90
                                     "/>
                        <TranslateTransform X="0.031"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Polygon Mouse.MouseDown="PlayPauseButton" Name="playIcon" Points="0,0 20,15 0 30" Fill="#FF45CEFE" Margin="253,46,250,274"></Polygon>
            <Polygon Mouse.MouseDown="PlayPauseButton" Name="pauseIcon1" Points="0,0 0,100 4,100 4,0" Fill="#FF45CEFE" Margin="256,46,265,274"></Polygon>
            <Polygon Mouse.MouseDown="PlayPauseButton" Name="pauseIcon2" Points="0,0 0,100 4,100 4,0" Fill="#FF45CEFE" Margin="263,46,258,274"></Polygon>
            <Polygon Mouse.MouseDown="NextSong" Points="0,0 20,15 0,30" Stretch="Uniform" Fill="#FF45CEFE" Margin="322,53,187,283" StrokeThickness="2"/>
            <Polygon Mouse.MouseDown="NextSong" Points="0,0 20,15 0,30" Stretch="Uniform" Fill="#FF45CEFE" Margin="330,53,180,283"/>
            <Polygon Mouse.MouseDown="PreviousSong" Points="0,0 20,15 0,30" Stretch="Uniform" Fill="#FF45CEFE" Margin="182,53,327,283" RenderTransformOrigin="0.5,0.5">
                <Polygon.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-180"/>
                        <TranslateTransform X="6.5"/>
                    </TransformGroup>
                </Polygon.RenderTransform>
            </Polygon>
            <Polygon Mouse.MouseDown="PreviousSong" Points="0,0 20,15 0,30" Stretch="Uniform" Fill="#FF45CEFE" Margin="190,53,320,283" RenderTransformOrigin="0.5,0.5">
                <Polygon.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-180"/>
                        <TranslateTransform X="-7.5"/>
                    </TransformGroup>
                </Polygon.RenderTransform>
            </Polygon>
            <Menu x:Name="menu" HorizontalAlignment="Left" Height="15" Margin="10,0,0,0" VerticalAlignment="Top" Width="100" Background="#FF020810">
                <MenuItem Header="File" Foreground="White" BorderThickness="0" BorderBrush="#FF020810" >
                    <MenuItem PreviewMouseDown="OpenFolder" Header="Open folder" Foreground="White" Background="#FF020810" BorderThickness="0" BorderBrush="#FF020810" />
                    <MenuItem PreviewMouseDown="OpenSong" Header="Open song" Background="#FF020810" Foreground="White" BorderBrush="#FF020810" />
                    <MenuItem PreviewMouseDown="AddFolder" Header="Add folder to playlist" Background="#FF020810" Foreground="White" BorderBrush="#FF020810" />
                    <MenuItem PreviewMouseDown="AddSong" Header="Add song to playlist" Background="#FF020810" Foreground="White" BorderBrush="#FF020810" />
                    <MenuItem PreviewMouseDown="ClearPlaylist" Header="Clear playlist" Background="#FF020810" Foreground="White" BorderBrush="#FF020810" />
                </MenuItem>
            </Menu>
            <Path MouseDown="Switch_Repeat" Name="repeatIcon" Margin="378.501,54.597,128.683,281.831" Stretch="Fill" Fill="#FF45CEFE">
                <Path.Data>
